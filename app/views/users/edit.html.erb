<div class="row justify-content-center">
    <div class="col-6">
        <h1>ユーザー情報編集</h1>
        
            <%= form_with(model: @user, local: true) do |f| %>
            <%= render 'layouts/error_messages' ,model: f.object %>
            
              <div class="form-group">
                <%= f.label :username ,"ユーザー名"%><br />
                <%= f.text_field :username, autofocus: true, autocomplete: "username", class:"form-control" %>
              </div>
              
              <div class="form-group">
                <%= f.label :email, "メールアドレス"%><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control"%>
              </div>
              
              <div class="form-group">
                <%= f.label :profile, "プロフィール" %><br />
                <%= f.text_area :profile, size:"20x5",autofocus: true, autocomplete: "profile", class:"form-control"%>
              </div>
              
              <div class="form-group">
                <%= f.label :profile_image,"プロフィール画像"%><br />
                <%= f.attachment_field :profile_image, autofocus: true, autocomplete: "profile_image", class:"form-control"%>
              </div>
              
              <div class="form-group">
                <%= f.submit "更新", class:"btn btn-primary form-control"%>
              </div>
              
            <% end %>

    </div>
</div>