<div class="row justify-content-center">
  <div class="col-4">
            <br>
            <h2>Sign up</h2><br>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <%= render "devise/shared/error_messages", resource: resource %>
              
                <div class="form-group">
                  <%= f.label :username %><br />
                  <%= f.text_field :username, autofocus: true, autocomplete: "username", class:"form-control fa", placeholder:"\uf007 Enter username" %>
                </div>
                
                <div class="form-group">
                  <%= f.label :email %><br />
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control fa" , placeholder:"\uf0e0 Enter email"%>
                </div>
              
                <div class="form-group">
                  <%= f.label :password %>
                  <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
                  <% end %><br />
                  <%= f.password_field :password, autocomplete: "new-password", class:"form-control fa" , placeholder:"\uf084 Enter password"%>
                </div>
              
                <div class="form-group">
                  <%= f.label :password_confirmation %><br />
                  <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control fa", placeholder:"\uf084 Enter password confirmation" %>
                </div>
              
                <div class="form-group">
                  <%= f.submit "Sign up", class:"btn btn-primary form-control"%>
                </div>
            <% end %>
            
            <%= render "devise/shared/links" %>

  </div>
</div>